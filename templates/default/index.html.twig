{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}


    <div class="container">
        <h2>Liste des membres</h2>
        <div class="row">
            {% for member in members %}
                <div class="col-4">
                    <img src="{{ vich_uploader_asset(member, 'imageFile') | imagine_filter('member_photo_desktop') }}"
                         alt="{{ member }}" />

                    <br>
                    {{ member.firstName }} {{ member.lastName }}<br>
                    {{ member.description|raw }}
                </div>
            {% endfor %}
        </div>

        <h2>Liste des projets</h2>
        <div class="row">
            {% for project in projects|projectFilter %}
                <div class="col-3">
                    {{ project.name}}
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
