{% extends 'base.html.twig' %}
{% block title %}Page Contact{% endblock %}
{% block body %}


    <div class="container">
        {% if not form.vars.valid %}
            <div class="alert alert-danger">Le Formulaire n'est pas valide</div>
        {% endif %}
        {% for type, messages in app.flashes(['success', 'danger']) %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}

        <div class="row">

            <div class="col-md-6">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.message) }}
                <br>
                <button type="submit" class="btn btn-success"> {{ 'Envoyer'|trans([], 'form') }} </button>
            </div>
        </div>
        {{ form_rest(form) }}

    </div>

{% endblock %}