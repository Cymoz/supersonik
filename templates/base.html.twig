<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}
    {% endblock %}
</head>
<body>


{% block nav %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="#"><img
                    src="https://www.agence-supersonik.com/contenu/uploads/2017/11/logo-sk-black-300x113.png" alt="logo"
                    scale="0"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link">{{ 'Accueil'|trans() }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ getPageUrl('test') }}" >{{ "L'agence" | trans()}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" target="">{{"RÃ©alisations" | trans()}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" target="">{{ "Expertise" | trans() }}</a>
                </li>
                <li>
                    <a class="nav-link" href="#" target="">{{ "Supermag"|trans() }}</a>
                </li>

                <li>
                    <a class="nav-link" target="" href="{{ path('contact') }}">Contact</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                       aria-haspopup="true" aria-expanded="false">
                        {{ app.request.locale }}
                    </a>
                    <div class="dropdown-menu">
                        {% for locale in LOCALES %}
                            <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'),
                                app.request.attributes.get("_route_params") |merge({'_locale': locale})
                                ) }}">{{ locale }}</a>
                        {% endfor %}
                    </div>
                </li>


            </ul>
        </div>
    </nav>

{% endblock %}

{% block body %}

{% endblock %}

{% block javascripts %}
{% endblock %}
{{ encore_entry_script_tags('app') }}
</body>
</html>
